<!DOCTYPE html>
<html ng-app="scorePredictor">
  <head>
    <title>11</title>
    <!-- stylesheets -->
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href='/stylesheets/pick.css'/>

    

	<!-- external javascript -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
  	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.js"></script>

  	<!-- self javascript -->
    <script src="/javascripts/angular-app.js"></script>
    <script src="/javascripts/myteam.js"></script>
  </head>

  <body ng-controller="mainController as mainCtrl">

  <div class="container">
  	<div class="col-md-6">
			<h1>Player Pick</h1>

				<% players.forEach( function( player) { %>
					<div class="row" id="player-row">
						<img class="player-pic" src="<%= player.pic_url %>">
						<p><%= player.name %>
						<b><%= player.team %></b>
						<button id="select-player">Select Player</button></p>
					</div>
				<% }); %>

		</div>

		<div class="col-md-6">
			<h1>Your Team</h1>

				<ul class="my-team">
					<li>
				</ul>
			
		</div>
	</div> <!-- end of container -->

</body>
</html>